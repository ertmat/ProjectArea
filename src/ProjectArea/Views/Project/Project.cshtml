@model ProjectViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="col-md-12">
                <h2>@Model.Name</h2>
            </div>
            <div>
                <p>@Model.Description</p>
            </div>
            <div>
                <a asp-controller="Project" asp-action="Join" asp-route-id="@Model.Id" class="btn btn-default">Join</a>
            </div>
        </div>
        <div class="col-md-6">
            <div>
                @foreach (var member in Model.Members)
            {
                    <div class="col-md-12">
                        <h2>Members:</h2>
                    </div>
                    <div class="col-md-6">
                        @member.Name
                    </div>
                    <div class="col-md-6">
                        Join date: @member.JoinDate
                    </div>
                }
            </div>
        </div>
    </div>
</div>