@model ProjectViewModel

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="margin-b-40">
                <h2 class="text-uppercase text-center">Add new Project</h2>
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <form method="post" enctype="multipart/form-data" asp-antiforgery="true">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group date">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Name...." tabindex="1">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <input asp-for="Description" type="text" class="form-control" placeholder="Description...." tabindex="2">
                            <span asp-validation-for="Description"></span>
                        </div>
                    </div>
                </div>
                <input type="submit" value="Create">
            </form>
        </div>
    </div>
</div>