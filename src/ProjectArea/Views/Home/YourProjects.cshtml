@model ProjectViewModel


<div class="container">
    <div class="row">
        <div>
            @foreach (var project in Model.Projects)
            {
                <a asp-controller="Home" asp-action="Project" asp-route-id="@project.Id">
                    <div class="col-md-6">
                        @project.Name
                    </div>
                    <div class="col-md-6">
                        @project.Description
                    </div>
                </a>
            }
        </div>
    </div>
</div>
