@model RegisterUserViewModel

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="margin-b-40">
                <h2 class="text-uppercase text-center">Register</h2>
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <form method="post" enctype="multipart/form-data" asp-antiforgery="true">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group date">
                            <input asp-for="UserName" type="text" class="form-control" placeholder="UserName...." tabindex="1">
                            <span asp-validation-for="UserName"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email...." tabindex="2">
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Name...." tabindex="3">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="LastName...." tabindex="4">
                            <span asp-validation-for="LastName"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password...." tabindex="5">
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="ConfirmPassword...." tabindex="6">
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>
                </div>
                <input type="submit" value="Create">
            </form>
        </div>
    </div>
</div>